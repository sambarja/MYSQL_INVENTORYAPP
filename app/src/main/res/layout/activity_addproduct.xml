<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".addproduct">
    <ImageView
        android:id="@+id/menuImage"
        android:layout_width="40dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.318"
        app:srcCompat="@drawable/menu"></ImageView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Add New Product"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    </TextView>

    <LinearLayout
        android:layout_width="277dp"
        android:layout_height="652dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.643">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="left"
            android:text="Model Number"
            android:textColor="@color/black"
            android:textSize="18dp"></TextView>

        <EditText
            android:id="@+id/editTextModelNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:hint="Model Number"
            android:textSize="19dp"
            android:theme="@style/activate"></EditText>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="left"
            android:text="Product Name"
            android:textColor="@color/black"
            android:textSize="18dp"></TextView>

        <EditText
            android:id="@+id/editTextProductName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:hint="Product Name"
            android:textSize="19dp"
            android:theme="@style/activate"></EditText>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="left"
            android:text="#SI"
            android:textColor="@color/black"
            android:textSize="18dp"></TextView>

        <EditText
            android:id="@+id/editTextSi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:hint="#Si"
            android:shadowColor="@color/dark_red"
            android:textSize="18dp"
            android:theme="@style/activate"></EditText>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="left"
            android:text="Brand"
            android:textColor="@color/black"
            android:textSize="18dp"></TextView>

        <EditText
            android:id="@+id/editTextBrand"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:hint="Brand Name"
            android:shadowColor="@color/dark_red"
            android:textSize="18dp"
            android:theme="@style/activate"></EditText>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="left"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="18dp"></TextView>

        <EditText
            android:id="@+id/editTextPrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:hint="Price"
            android:shadowColor="@color/dark_red"
            android:textSize="18dp"
            android:theme="@style/activate"></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/SubtractBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/minus"></ImageView>
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/quantityEditText"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:hint="0">

            </EditText>

            <androidx.cardview.widget.CardView
                android:id="@+id/AddBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/plus"></ImageView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/doneBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:backgroundTint="@color/dark_red"
            android:fontFamily="@font/poppins_medium"
            android:text="Add"></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>